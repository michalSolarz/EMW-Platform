<!DOCTYPE html>
<html lang="en">

<head>
    {% block head %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="icon" href="{{ asset('assets/img/favicon.ico') }}">

        <title>{% block title -%}East Meets West registration app{% endblock title %}</title>

        <!-- Bootstrap core CSS -->
        <link href="{{ asset('assets/css/bootstrap-frontend.min.css') }}" rel="stylesheet">

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="{{ asset('assets/js/html5shiv.min.js') }}"></script>
        <script src="{{ asset('assets/js/respond.min.js') }}"></script>
        <![endif]-->
    {% endblock %}
</head>


<body>
{% block body %}


    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            {% block navigation %}
                <div class="navbar-header">
                    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/" class="navbar-brand">EMW Platform</a>
                </div>
                <nav class="collapse navbar-collapse" >
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="{{ path('admin_university') }}">Universities</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_paper_category') }}">Paper categories</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_faculty') }}">Faculties</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_country') }}">Countries</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_event') }}">Events</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_list_users') }}">Users</a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li >
                            <a href="{{ path('user_data_edit') }}">User data</a>
                        </li>
                        <li >
                            <a href="{{ path('fos_user_security_logout') }}">
                            <span class="glyphicon glyphicon-log-out"></span>
                            Logout</a>
                        </li>
                    </ul>
                </nav>
            {% endblock %}
        </div>
    </nav>


    <!--main-->
    <div class="container">

        <div class="row">
            <!--left-->

            <div class="col-md-2" id="leftCol">
                <ul class="nav nav-stacked">
                    {% block left_sidebar %}
                    {% endblock %}
                </ul>
            </div>
            <!--/left-->


            <!--right-->
            <div class="col-md-9">
                {% block content %}
                {% endblock %}
            </div>
            <!--/right-->

        </div>
        <!--/row-->

        </div>
    <!--/container-->
    </div>

{% block scripts %}
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="{{ asset('assets/js/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="{{ asset('assets/js/ie10-viewport-bug-workaround.js') }}"></script>
{% endblock %}
{% endblock %}
</body>
</html>
