{% extends "base-backend.html.twig" %}
{% block title -%}{{ parent() }} - Manage user roles{% endblock title %}


{% block content -%}
    {% if userRoles != null %}
        <form method="post">
            <select name="removeRole">
                {% for role in userRoles %}
                    <option value="{{ role }}">{{ role }}</option>
                {% endfor %}
            </select>
            <button type="submit">Remove role</button>
        </form>
    {% endif %}

    {% if availableRoles != null %}
        <form method="post">
            <select name="addRole">
                {% for role in availableRoles %}
                    <option value="{{ role }}">{{ role }}</option>
                {% endfor %}
            </select>
            <button type="submit">Add role</button>
        </form>
    {% endif %}
{% endblock %}
