{% extends 'base-backend.html.twig' %}

{% block content %}
    <h1>Paper categories</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Is it universal</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{% if entity.universalPaperCategory %}
                        Yes
                    {% else %}
                        No
                    {% endif %}
                </td>
                <td>
                    <ul class="list-unstyled">
                        <li>
                            <a href="{{ path('admin_paper_category_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_paper_category_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_paper_category_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
